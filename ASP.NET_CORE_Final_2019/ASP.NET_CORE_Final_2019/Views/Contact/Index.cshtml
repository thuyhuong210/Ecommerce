
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model ASP.NET_CORE_Final_2019.Models.Contact

<div class="hero-wrap hero-bread" style="background-image:url('/images/bg_1.jpg')">
    <div class="container">
        <div class="row no-gutters slider-text align-items-center justify-content-center">
            <div class="col-md-9 ftco-animate text-center">
                <p class="breadcrumbs"><span class="mr-2"><a href="/Home">Trang chủ</a></span> <span>Liên hệ</span></p>
                <h1 class="mb-0 bread">Liên hệ</h1>
            </div>
        </div>
    </div>
</div>

<section class="ftco-section contact-section bg-light">
    <div class="container">
        <div class="row d-flex mb-5 contact-info">
            <div class="w-100"></div>
            <div class="col-md-4 d-flex">
                <div class="info bg-white p-4">
                    <p><span>Địa chỉ:</span> 280 An Dương Vương, Phường 4, Quận 5, Thành phố Hồ Chí Minh, Việt Nam</p>
                </div>
            </div>
            <div class="col-md-4 d-flex">
                <div class="info bg-white p-4">
                    <p><span>Số điện thoại: </span> <a href="tel://0974384921">+84 354 450 719</a></p>
                </div>
            </div>
            <div class="col-md-4 d-flex">
                <div class="info bg-white p-4">
                    <p><span>Email: </span> huongltt210@gmail.com</p>
                </div>
            </div>
            @*<div class="col-md-3 d-flex">
                <div class="info bg-white p-4">
                    <p><span>Trang web: </span> <a href="/Home">KhoaRauCu.com.vn</a></p>
                </div>
            </div>*@
        </div>
        <div class="row block-9">
            <div class="col-md-6 order-md-last d-flex">
                <form asp-action="Index" class="bg-white p-5 contact-form">
                    <div class="form-group">
                        <input type="text" class="form-control" asp-for="Ten" placeholder="Tên của bạn">
                    </div>
                    <div class="form-group">
                        <input type="email" class="form-control" asp-for="Email" placeholder="Email của bạn">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" asp-for="ChuDe" placeholder="Chủ đề">
                    </div>
                    <div class="form-group">
                        <textarea name="" id="" cols="30" rows="7" asp-for="NoiDung" class="form-control" placeholder="Nội dung"></textarea>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Send Message" class="btn btn-primary py-3 px-5">
                    </div>
                </form>
            </div>

            <div class="col-md-6 d-flex">
            </div>
        </div>
    </div>
</section>
